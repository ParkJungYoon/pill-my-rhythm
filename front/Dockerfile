FROM nginx:1.23.0-alpine

RUN mkdir /app

WORKDIR /app

RUN mkdir ./build

ADD ./build ./build

RUN rm /etc/nginx/conf.d/default.conf

COPY ./nginx.conf /etc/nginx/conf.d

EXPOSE 80

EXPOSE 443

CMD ["nginx", "-g", "daemon off;"]